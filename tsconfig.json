{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./src",
    "paths": {
      "@actions/*": [ "actions/*" ],
      "@app/*": [ "app/*" ],
      "@assets/*": [ "assets/*" ],
      "@effects/*": [ "effects/*" ],
      "@env": [ "environments/environment" ],
      "@models/*": [ "models/*" ],
      "@pages/*": [ "pages/*" ],
      "@reducers/*": [ "reducers/*" ],
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}
